<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ksmart.mybatis.mapper.GoodsMapper">
	<resultMap type="Goods" id="goodsResultMap">
		<result	column="g_code"			property="goodsCode"/>
		<result column="g_name"			property="goodsName"/>
		<result column="g_price"		property="goodsPrice"/>
		<result column="g_seller_id"	property="goodsSellerId"/>
		<result column="g_reg_date"		property="goodsRegDate"/>
		<association property="member">
			<id		column="m_id" 		property="memberId"/>
			<result column="m_pw" 		property="memberPw"/>
			<result column="m_name" 	property="memberName"/>
			<result column="m_level" 	property="memberLevel"/>
			<result column="m_email" 	property="memberEmail"/>
			<result column="m_addr" 	property="memberAddr"/>
			<result column="m_reg_date" property="memberRegDate"/>
		</association>
	</resultMap>
	
	<insert id="addGoods" parameterType="Goods">
		/* 상품 등록 */
		INSERT INTO tb_goods
			( g_code
			 ,g_name
			 ,g_price
			 ,g_seller_id
			 ,g_reg_date
			)VALUES(
			 sf_newGoodsCode()
			,#{goodsName}
			,#{goodsPrice}
			,#{goodsSellerId}
			,CURDATE()
		);
	</insert>
	
	<select id="getGoodsList" parameterType="map" resultMap="goodsResultMap">
		/* 상품 목록 조회 */
		SELECT
			 g_code
			,g_name
			,g_price
			,g_seller_id
			,g_reg_date
		FROM
			tb_goods AS g
			INNER JOIN
			tb_member AS m
			ON
			g.g_seller_id = m.m_id
		<trim prefix="WHERE" prefixOverrides="AND |OR">
			<if test="memberId != null and memberId != ''">
				g.g_seller_id = #{memberId}
			</if>
		</trim>
		ORDER BY g.g_code;
	</select>
	
</mapper>