	<update id="modifyMember" parameterType="Member">
		UPDATE tb_member
		<trim prefix="SET" prefixOverrides=",">
			<if test="memberPw != null and memberPw != ''">
				 m_pw = #{memberPw}
			</if>
			<if test="memberName != null and memberName != ''">
				,m_name = #{memberName}
			</if>
			<if test="memberLevel != null and memberLevel != ''">
				,m_level = #{memberLevel}
			</if>
			<if test="memberEmail != null and memberEmail != ''">
				,m_email = #{memberEmail}
			</if>
			<if test="memberAddr != null and memberAddr != ''">
				,m_addr = #{memberAddr}
			</if>
		</trim>
		WHERE
			m_id = #{memberId};
	</update>
	
	<select id="getMemberInfoById" parameterType="String" resultMap="memberResultMap">
		SELECT
			 m.m_id
			,m.m_pw
			,m.m_name
			,m.m_level
			,m.m_email
			,m.m_addr
			,m.m_reg_date
		FROM
			tb_member AS m
		WHERE
			m.m_id = #{memberId};
	</select>
	
	<insert id="addMember" parameterType="Member">
		/* 회원가입 */
		INSERT INTO tb_member
			(	 
				 m_id
				,m_pw
				,m_name
				,m_level
				,m_email
				,m_addr
				,m_reg_date
			)VALUES(
				  #{memberId}
				 ,#{memberPw}
				 ,#{memberName}
				 ,#{memberLevel}
				 ,#{memberEmail}
				 ,#{memberAddr}
				 ,CURDATE()
			);		
	</insert>
	
	<select id="getMemberLevelList" resultType="MemberLevel">
		/* 회원등급목록 조회 */
		SELECT
			 l.level_num			AS levelNum
			,l.level_name			AS levelName
			,l.level_reg_date		AS levelRegDate
		FROM
			tb_member_level AS l;
	</select>

	<select id="getMemberList" resultType="Member">
		/* 회원 목록 조회 */
		SELECT
			m.m_id				AS memberId
			,m.m_pw				AS memberPw
			,m.m_name			AS memberName
			,m.m_level			AS memberLevel
			,m.m_email			AS memberEmail
			,m.m_addr			AS memberAddr
			,m.m_reg_date		AS memberRegDate
		FROM
			tb_member AS m;
	</select>
</mapper>